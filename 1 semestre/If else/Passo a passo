#include <stdio.h>
//Programa básico de média de notas utilizando if else

int main(){
	double nota1, nota2, media;
	
	printf("Digite a nota 1 e a nota 2\n");
	scanf("%lf%lf", &nota1, &nota2); //se trata de um scanf multiplo
	media = (nota1 + nota2)/2;
	
	printf("%.1lf\n", media); 
	
	if (media >= 6)
	printf("Aprovado com media %.1f! \n", media);
	else
	printf("Reprovado\n");
	
}
